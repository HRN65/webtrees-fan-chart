<script type="text/javascript">

function AncestralFanChart(data)
{
    let options = new rso.Options(
        data.individualUrl,
        data.updateUrl,
        data.labels,
        data.generations,
        data.fanDegree,
        data.defaultColor,
        data.fontScale,
        data.fontColor,
        data.hideEmptySegments,
        data.showColorGradients,
        data.rtl
    );

    options = Object.assign({}, options, data);

    new rso.Chart("#fan_chart", options);
}

